class Solution {
public:
    int diameter=0;
    int dfs(TreeNode* root){
        
        if(root==NULL)
         return 0;
        
        int l=dfs(root->left);
        int r=dfs(root->right);

        diameter = max(diameter,l+r);  
        return 1+max(l,r);


    }

    int diameterOfBinaryTree(TreeNode* root) {

        dfs(root);
        return diameter;
        
    }
};
